<?xml version="1.0"?>
<config>
    <modules>
        <FW_Subscription>
            <version>0.1.3</version>
        </FW_Subscription>
    </modules>
    <global>
        <models>
            <subscription>
                <class>FW_Subscription_Model</class>
				<resourceModel>subscription_resource</resourceModel>
            </subscription>
			
			<subscription_resource>
                <class>FW_Subscription_Model_Resource</class>
				<entities>
         		<magazine>
           			<table>subscription_table</table>
         		</magazine>
      		</entities>
            </subscription_resource>
        </models>
	 <helpers>

	    <subscription>
	      <class>FW_Subscription_Helper</class>
	    </subscription>
	</helpers>
	 
	 <resources>
	  <subscription_setup>
		<setup>
		  <module>FW_Subscription</module>
		  <class>Mage_Catalog_Model_Resource_Setup</class>
		</setup>
		<connection>
		  <use>core_setup</use>
		</connection>
	  </subscription_setup>
	  <subscription_write>
		<connection>
		  <use>core_write</use>
		</connection>
	  </subscription_write>
	  <subscription_read>
		<connection>
		  <use>core_read</use>
		</connection>
	  </subscription_read>
	</resources>
	 
    </global>
    <frontend>
		<layout>
            <updates>
                <subscription_layout module="FW_Subscription">
                    <file>subscription.xml</file>
				</subscription_layout>
            </updates>
        </layout>
       <routers>
            <fw_subscription>
		<use>standard</use>
                <args>
		    <module>FW_Subscription</module>
		    <frontName>subs</frontName>
                </args>
            </fw_subscription>
        </routers>
    </frontend>
    <crontab>
      <jobs>
        <subscription>
          <schedule>
            <cron_expr>0 1 * * *</cron_expr>
          </schedule>
          <run>
             <model>subscription/cron_magzinesubscription::process</model>
          </run>
        </subscription>
      </jobs>
  </crontab>
    
</config>
